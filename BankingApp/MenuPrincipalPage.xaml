<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="BankingApp.MenuPrincipalPage" 
             xmlns:local="clr-namespace:BankingApp" >

      <TabbedPage.ToolbarItems>
        <ToolbarItem Name="MenuItem1" Text="Info" Order="Primary" Priority="0" />
        <ToolbarItem Name="MenuItem2" Text="Salir" Order="Primary" Priority="1" />
      </TabbedPage.ToolbarItems>
    
     <NavigationPage   Title="Cuentas" Icon="IMG/cuentas.png" BarTextColor="White"  BarBackgroundColor="Teal" BackgroundColor="Teal" >
        <x:Arguments>
            <local:CuentasPage />
        </x:Arguments>
    </NavigationPage>
    
    <NavigationPage   Title="Transferencias" Icon="IMG/transfer.png" BarTextColor="White"  BarBackgroundColor="Teal" BackgroundColor="Teal" >
        <x:Arguments>
            <local:TransferenciasPage />
        </x:Arguments>
    </NavigationPage>

     <NavigationPage   Title="Mis Pagos" Icon="IMG/pagos.png" BarTextColor="White"  BarBackgroundColor="Teal" BackgroundColor="Teal" >
        <x:Arguments>
            <local:PagosPage />
        </x:Arguments>
    </NavigationPage>
    
</TabbedPage>

